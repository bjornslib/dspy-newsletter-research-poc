{
  // Example: Voice Agent Analytics Dashboard for AgenCheck
  // This JSONC brief demonstrates the format for voice agent UI components

  "metadata": {
    "name": "VoiceAgentDashboard",
    "description": "Real-time analytics dashboard for AgenCheck voice agents showing call metrics, LiveKit stream status, and conversation timelines",
    "route": "/dashboard/voice",
    "version": "1.0"
  },

  "layout": {
    "type": "page",
    "structure": {
      "container": "min-h-screen bg-background",
      "content": "max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8",
      "grid": "space-y-8"
    },
    "responsive": {
      "sm": "Single column, cards stack vertically",
      "md": "2-column grid for metric cards",
      "lg": "4-column metrics, 2-column main content",
      "xl": "Centered with comfortable max-width"
    }
  },

  "sections": [
    {
      "id": "header",
      "description": "Page header with title and quick actions",
      "layout": "flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-8",
      "components": [
        {
          "name": "PageTitle",
          "content": "Voice Agent Analytics",
          "subtext": "Real-time metrics and performance insights"
        },
        {
          "name": "ActionButtons",
          "items": [
            { "label": "Export Report", "variant": "outline", "icon": "Download" },
            { "label": "New Agent", "variant": "default", "icon": "Plus" }
          ]
        }
      ]
    },
    {
      "id": "live-status",
      "description": "Current active sessions indicator",
      "layout": "mb-6",
      "components": [
        {
          "name": "LiveStatusBanner",
          "structure": "bg-green-500/10 border border-green-500/20 rounded-lg px-4 py-3 flex items-center gap-3",
          "content": {
            "indicator": "w-2 h-2 rounded-full bg-green-500 animate-pulse",
            "text": "3 active voice sessions",
            "link": "View all sessions"
          }
        }
      ]
    },
    {
      "id": "metrics",
      "description": "Key performance indicators",
      "layout": "grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4",
      "components": [
        {
          "name": "MetricCard",
          "instances": [
            {
              "title": "Total Calls Today",
              "value": "1,247",
              "trend": { "direction": "up", "value": "+12.5%", "comparison": "vs yesterday" },
              "icon": "Phone"
            },
            {
              "title": "Avg Call Duration",
              "value": "4m 32s",
              "trend": { "direction": "down", "value": "-8%", "comparison": "vs last week" },
              "icon": "Clock"
            },
            {
              "title": "Resolution Rate",
              "value": "94.2%",
              "trend": { "direction": "up", "value": "+2.1%", "comparison": "vs last month" },
              "icon": "CheckCircle"
            },
            {
              "title": "Active Agents",
              "value": "12",
              "subtext": "of 15 total",
              "icon": "Users"
            }
          ]
        }
      ]
    },
    {
      "id": "main-content",
      "description": "Primary dashboard content with chart and activity feed",
      "layout": "grid grid-cols-1 lg:grid-cols-3 gap-6",
      "components": [
        {
          "name": "CallVolumeChart",
          "gridSpan": "lg:col-span-2",
          "description": "Line chart showing call volume over time",
          "structure": {
            "container": "bg-card rounded-lg border border-border p-6",
            "header": "flex items-center justify-between mb-6",
            "chart": "h-80 w-full"
          },
          "data": {
            "type": "time-series",
            "granularity": "hourly",
            "metrics": ["inbound", "outbound", "missed"]
          }
        },
        {
          "name": "RecentActivity",
          "gridSpan": "lg:col-span-1",
          "description": "Live feed of recent call events",
          "structure": {
            "container": "bg-card rounded-lg border border-border p-6",
            "header": "font-semibold text-lg mb-4",
            "list": "space-y-4 max-h-80 overflow-y-auto"
          },
          "items": [
            {
              "type": "call_completed",
              "agent": "Aura",
              "duration": "3m 45s",
              "time": "2 min ago"
            },
            {
              "type": "verification_success",
              "agent": "Eddy",
              "entity": "MIT",
              "time": "5 min ago"
            }
          ]
        }
      ]
    },
    {
      "id": "agent-status",
      "description": "Grid of individual agent status cards",
      "layout": "grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 mt-8",
      "components": [
        {
          "name": "AgentStatusCard",
          "structure": {
            "container": "bg-card rounded-lg border border-border p-4 hover:shadow-md transition-shadow",
            "header": "flex items-center gap-3 mb-3",
            "avatar": "w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center",
            "status": "flex items-center gap-2 text-sm"
          },
          "instances": [
            {
              "name": "Aura",
              "role": "Customer Support",
              "status": "active",
              "currentCall": "John D. - Billing inquiry"
            },
            {
              "name": "Eddy",
              "role": "Education Verification",
              "status": "idle",
              "lastActive": "2 min ago"
            },
            {
              "name": "Nova",
              "role": "Technical Support",
              "status": "connecting",
              "queue": "3 waiting"
            }
          ]
        }
      ]
    }
  ],

  "components": [
    {
      "name": "MetricCard",
      "props": {
        "title": "string",
        "value": "string | number",
        "trend": "{ direction: 'up' | 'down', value: string, comparison: string } | null",
        "subtext": "string | null",
        "icon": "LucideIcon"
      },
      "structure": {
        "container": "bg-card rounded-lg border border-border p-6",
        "iconWrapper": "w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center mb-4",
        "icon": "w-5 h-5 text-primary",
        "title": "text-sm text-muted-foreground",
        "value": "text-3xl font-bold text-foreground mt-1",
        "trend": {
          "up": "text-green-600 dark:text-green-400",
          "down": "text-destructive"
        }
      },
      "darkMode": {
        "container": "dark:bg-card dark:border-border"
      }
    },
    {
      "name": "AgentStatusCard",
      "props": {
        "name": "string",
        "role": "string",
        "status": "'active' | 'idle' | 'connecting' | 'error'",
        "currentCall": "string | null",
        "lastActive": "string | null",
        "queue": "string | null"
      },
      "statusColors": {
        "active": {
          "badge": "bg-green-500/10 text-green-600 dark:text-green-400",
          "indicator": "bg-green-500"
        },
        "idle": {
          "badge": "bg-muted text-muted-foreground",
          "indicator": "bg-gray-400"
        },
        "connecting": {
          "badge": "bg-secondary/10 text-secondary",
          "indicator": "bg-secondary animate-pulse"
        },
        "error": {
          "badge": "bg-destructive/10 text-destructive",
          "indicator": "bg-destructive"
        }
      }
    }
  ],

  "colors": {
    "primary": {
      "usage": "Agent avatars, primary CTAs, active indicators",
      "token": "bg-primary text-primary-foreground"
    },
    "secondary": {
      "usage": "Links, secondary actions, connecting states",
      "token": "bg-secondary text-secondary-foreground"
    },
    "accentColors": {
      "success": "#22C55E // Call completed, verification success",
      "warning": "#F59E0B // Queue alerts, long wait times",
      "chart": {
        "inbound": "var(--chart-1)",
        "outbound": "var(--chart-2)",
        "missed": "var(--chart-5)"
      }
    }
  },

  "interactions": {
    "agentCard": {
      "hover": "hover:shadow-md transition-shadow cursor-pointer",
      "click": "Opens agent detail modal"
    },
    "activityItem": {
      "hover": "hover:bg-muted/50 rounded-lg transition-colors",
      "click": "Navigates to call detail"
    },
    "realtime": {
      "newActivity": "animate-in slide-in-from-top-2 fade-in duration-300",
      "statusChange": "Smooth color transition"
    }
  },

  "accessibility": {
    "labels": {
      "metricsSection": "aria-label='Key performance metrics'",
      "agentGrid": "aria-label='Agent status overview'",
      "activityFeed": "aria-live='polite' aria-label='Recent activity'"
    },
    "announcements": {
      "newCall": "Screen reader announces new incoming calls",
      "statusChange": "Agent status changes announced"
    }
  },

  "stateManagement": {
    "realtime": {
      "source": "SSE endpoint /api/voice/events",
      "updates": ["agent_status", "call_events", "metrics"]
    },
    "store": {
      "slice": "voiceAgentSlice (new)",
      "state": {
        "agents": "Map<string, AgentStatus>",
        "activeCallsCount": "number",
        "recentActivity": "ActivityEvent[]"
      }
    }
  }
}
