# DSPy Newsletter Research Tool - Environment Variables
# Copy this file to .env and fill in your API keys

# OpenAI API Key (required for DSPy LM and Weaviate text2vec-openai)
OPENAI_API_KEY=your_openai_api_key_here

# Cohere API Key (required for Weaviate reranker-cohere module)
COHERE_API_KEY=your_cohere_api_key_here

# Weaviate connection settings (optional, defaults shown)
WEAVIATE_HOST=localhost
WEAVIATE_PORT=8100
WEAVIATE_GRPC_PORT=50052
# WEAVIATE_URL is auto-generated from host:port, but can be overridden
# WEAVIATE_URL=http://localhost:8100
